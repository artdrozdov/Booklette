@{
    ViewBag.Title = "Booklette - Registration";
}
@using Booklette.Models;

@model RegistrationModel


<div class="container-fluid">
    <div class="row">
        <div class="col-md-offset-2 col-md-8 col-sm-12">
            <form role="main" class="form-signin" data-container="#container" method="post" action="/Registration">
                <h2 class="form-signin-heading logo">Registration</h2>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Name, new { @class="form-control", @placeholder="Name" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", @placeholder="Surname" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Email, new { @class="form-control", @type="email", @placeholder="Email" })                 
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @placeholder = "Password" })     
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.RepeatPasword, new { @class = "form-control", @type = "password", @placeholder = "Repeat password" })     
                </div>
                <input type="submit" class="btn btn-success" value="Register" />
            </form>
        </div>
    </div>
</div>
